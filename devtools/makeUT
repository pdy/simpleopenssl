unif="unif"
incr="incr"

build=1

pushd ./test/ &&
if [ $# -ne 0 ]; then
  if [ $1 == $unif ]; then
    cp makefiles/Makefile_unif ./Makefile &&
    make clean
  elif [ $1 == $incr ]; then
    cp makefiles/Makefile_incr ./Makefile &&
    make clean
  else
    make -j6 $1
    build=0
  fi
fi

if [ $build -eq 1 ]; then
  if [ $# -eq 2 ]; then
    make -j6 $2
  else
    make -j6
  fi
fi

popd
